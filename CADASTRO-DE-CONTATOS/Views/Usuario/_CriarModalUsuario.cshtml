@model UsuarioModel;
<script src="~/js/jquery.mask.min.js"></script>
<script src="~/js/site.js"></script>
<div class="modal fade" id="modal-editar-contato" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Cadastrar Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Usuario" asp-action="Criar" method="post">
                <div class="modal-body">


                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <input type="text" asp-for="Nome" class="form-control" autocomplete="off" placeholder="Digite o nome do usuario" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" asp-for="Email" class="form-control" autocomplete="off" placeholder="Digite o email do usuario" required>
                    </div>
                    <div class="form-group">
                        <label for="login">Login</label>
                        <input type="text" asp-for="Login" class="form-control" autocomplete="off" placeholder="Digite o login do usuario" required>
                    </div>
                    <div class="form-group">
                        <label for="ClienteId" class="control-label">Tipo Conta</label>
                        <select class="form-control" asp-for="Conta" required>
                            <option value="" selected disabled>Selecione</option>
                            <option value="0">Padrão</option>
                            <option value="1">Administrador</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="Senha">Senha</label>
                        <input type="password" asp-for="Senha" class="form-control" autocomplete="off" placeholder="Digite a senha do usuario" required>
                    </div>
                    <br />
                </div>
                <div class="modal-footer">
                    <a class="btn btn-secondary" data-bs-dismiss="modal">Voltar</a>
                    <button class="btn btn-primary" type="submit">Cadastrar</button>
                </div>
            </form>
        </div>
    </div>
</div>

