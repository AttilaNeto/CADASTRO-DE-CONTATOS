@model ContatoModel

<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>
</div>


<form asp-controller="Contato" asp-action="Editar" method="post">

    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" autocomplete="off" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" asp-for="Email" class="form-control" autocomplete="off" placeholder="Digite o email do contato">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="numero">Numero</label>
        <input type="text" asp-for="Numero" class="form-control sp_celphones" maxlength="15" autocomplete="off" placeholder="Digite o numero do contato">
        @Html.ValidationMessageFor(x => x.Numero)
    </div>
    <br />
    <div class="form-group d-grid gap-2 col-6 mx-auto">
        <button class="btn btn-primary" type="submit">Alterar</button>
        <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
    </div>

</form>