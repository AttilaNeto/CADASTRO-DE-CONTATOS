@model ContatoModel;

<div class="text-center">
    <h3 class="display-4">Realmente deseja apagar o contato @Model.Nome e numero @Model.Numero?</h3>
</div>

<div class="form-group d-grid gap-2 col-6 mx-auto">
    <a class="btn btn-primary" asp-controller="Contato" asp-action="Index">Cancelar</a>
    <a class="btn btn-danger" asp-route-id="@Model.Id" asp-controller="Contato" asp-action="Deletar">Confirmar</a>
</div>

